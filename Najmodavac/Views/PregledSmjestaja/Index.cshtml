@model IEnumerable<Najmodavac.Models.SmjestajnaJedinica>

@{
    ViewData["Title"] = "Index";
}

<h1>Pregled Smjestaja</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Velicina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Znacajke)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cijena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NazivSmjestaja)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipSmjestaja)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Velicina)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Znacajke)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cijena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NazivSmjestaja.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipSmjestaja.Grad)
            </td>
            <td>
               
                <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i></a> |
               
            </td>
        </tr>
}
    </tbody>
</table>
